<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color_black"/>


    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/ConversationAdapter_mTvName"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/ConversationAdapter_mTvGroupTime"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:text="Group conversation"
        android:textColor="@color/text_primary_color_black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/ConversationAdapter_mTvGroupTime"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ConversationAdapter_mTvName"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:textSize="12sp"/>

    <com.yzx.chat.widget.view.BadgeImageView
        android:id="@+id/ConversationAdapter_mTvGroupLastHeadImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/ConversationAdapter_mTvName"
        android:layout_marginStart="27dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/temp_head_image"/>

    <TextView
        android:id="@+id/ConversationAdapter_mTvGroupLastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ConversationAdapter_mTvGroupLastHeadImage"
        android:layout_alignTop="@+id/ConversationAdapter_mTvGroupLastHeadImage"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/ConversationAdapter_mTvGroupLastHeadImage"
        android:layout_toStartOf="@+id/ConversationAdapter_mTvGroupTime"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/ConversationAdapter_mTvGroupPeopleImageLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/ConversationAdapter_mTvGroupLastHeadImage"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/ConversationAdapter_mTvGroupTime"
        android:orientation="horizontal">

        <com.yzx.chat.widget.view.BadgeImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/temp_head_image"/>

        <com.yzx.chat.widget.view.BadgeImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/temp_head_image"/>

        <com.yzx.chat.widget.view.BadgeImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/temp_head_image"/>

        <com.yzx.chat.widget.view.BadgeImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/temp_head_image"/>

    </LinearLayout>


</RelativeLayout>