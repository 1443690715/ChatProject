<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingEnd="12dp"
    android:paddingStart="12dp">


    <com.yzx.chat.widget.view.CircleImageView
        android:id="@+id/CreateGroupAdapter_mIvHeadImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/temp_head_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CreateGroupAdapter_mTvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="也执行"
        android:textColor="@color/text_primary_color_black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CreateGroupAdapter_mCbIsSelected"
        app:layout_constraintStart_toEndOf="@+id/CreateGroupAdapter_mIvHeadImage"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/CreateGroupAdapter_mCbIsSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>