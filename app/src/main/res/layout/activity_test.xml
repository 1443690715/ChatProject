<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/theme_main_color"
        android:layout_height="200dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/text_main_color_white"
                android:textSize="20sp" />


        </FrameLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:src="@drawable/temp_head_image" />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        app:layout_anchor="@id/FriendProfileActivity_mAppBarLayout"
        app:layout_anchorGravity="bottom|center_horizontal">

    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_marginTop="264dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/FriendProfileActivity_mIvIconAccount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_sex_man" />

            <TextView
                android:id="@+id/FriendProfileActivity_mTvLabelAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/FriendProfileActivity_mIvIconAccount"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconAccount"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="帐号"
                android:textColor="@color/text_color_alpha_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FriendProfileActivity_mTvContentAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/FriendProfileActivity_mTvLabelAccount"
                android:layout_below="@+id/FriendProfileActivity_mTvLabelAccount"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconAccount"
                android:gravity="center_vertical"
                android:text="244546875@qq.com"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/FriendProfileActivity_mIvIconLocation"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/FriendProfileActivity_mTvLabelLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/FriendProfileActivity_mIvIconLocation"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconLocation"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="所在地区"
                android:textColor="@color/text_color_alpha_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FriendProfileActivity_mTvContentLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/FriendProfileActivity_mTvLabelLocation"
                android:layout_below="@+id/FriendProfileActivity_mTvLabelLocation"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconLocation"
                android:gravity="center_vertical"
                android:text="广东 珠海"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/FriendProfileActivity_mIvIconSignature"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_signature" />

            <TextView
                android:id="@+id/FriendProfileActivity_mTvLabelSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/FriendProfileActivity_mIvIconSignature"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconSignature"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="个性签名"
                android:textColor="@color/text_color_alpha_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/FriendProfileActivity_mTvContentSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/FriendProfileActivity_mTvLabelSignature"
                android:layout_below="@+id/FriendProfileActivity_mTvLabelSignature"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconSignature"
                android:gravity="center_vertical"
                android:text="How to improve UI improve UI performance and responsiveness by sending work to a Service running in the background"
                android:textSize="13sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/FriendProfileActivity_mIvIconAlbum"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_camera" />

            <TextView
                android:id="@+id/FriendProfileActivity_mTvLabelAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/FriendProfileActivity_mIvIconAlbum"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconAlbum"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="相册"
                android:textColor="@color/text_color_alpha_black"
                android:textStyle="bold" />

            <com.yzx.chat.widget.view.NineGridImageView
                android:id="@+id/FriendProfileActivity_mNineGridImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/FriendProfileActivity_mTvLabelAlbum"
                android:layout_below="@+id/FriendProfileActivity_mTvLabelAlbum"
                android:layout_toEndOf="@+id/FriendProfileActivity_mIvIconAlbum" />

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>
</merge>