<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:layout_marginEnd="56dp"
    android:layout_marginStart="8dp"
    android:gravity="center_vertical|start">

    <com.yzx.chat.widget.view.CircleImageView
        android:id="@+id/ChatMessageAdapter_mIvAvatar"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <FrameLayout
        android:id="@+id/ChatAdapter_mFlPlayLayout"
        android:layout_width="wrap_content"
        android:layout_height="56dp"

        android:minWidth="120dp">

        <ImageView
            android:id="@+id/ChatMessageAdapter_mIvPlayIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical" />

    </FrameLayout>

    <TextView
        android:id="@+id/ChatAdapter_mTvVoiceTimeLength"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center_vertical" />


</LinearLayout>
