<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.yzx.chat.widget.view.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:src="@drawable/ic_search"
            android:tint="@android:color/white" />


        <AutoCompleteTextView
            android:id="@+id/ContactFragment_mSearchView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:completionThreshold="1"
            android:hint="@string/ContactFragment_SearchContact"
            android:maxLength="16"
            android:maxLines="1"
            android:overScrollMode="never"
            android:textColor="@color/text_primary_color_black"
            android:textColorHint="@color/text_primary_color_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ContactFragment_mLlContactOperation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical">

        <com.yzx.chat.widget.view.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:src="@drawable/ic_friend"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="新的朋友"
            android:textColor="@color/text_primary_color_black"
            android:textSize="16sp" />

        <com.yzx.chat.widget.view.BadgeView
            android:id="@+id/ContactFragment_mBadgeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical">

        <com.yzx.chat.widget.view.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:padding="7dp"
            android:src="@drawable/ic_label"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="标签(0)"
            android:textColor="@color/text_primary_color_black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
