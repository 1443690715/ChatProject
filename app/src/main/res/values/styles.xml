<resources>

    <!-- Base application theme. -->
    <style name="DefaultLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_main_color</item>
        <item name="colorPrimaryDark">@color/theme_main_color_dark</item>
        <item name="colorAccent">@color/theme_main_color</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary_color_black</item>
        <item name="android:textColorPrimary">@color/text_primary_color_black</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowBackground">@color/theme_background_color</item>
    </style>

    <style name="BaseDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="colorPrimary">@color/theme_main_color</item>-->
        <!--<item name="colorPrimaryDark">@color/theme_main_color</item>-->
        <item name="colorAccent">@color/theme_main_color</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="TransparentStatusBarLightTheme" parent="DefaultLightTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="NoBackgroundLightTheme" parent="DefaultLightTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="NoBackgroundDarkTheme" parent="BaseDarkTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_register</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/theme_main_color</item>
        <item name="colorPrimaryDark">@color/theme_main_color</item>
        <item name="colorAccent">@color/theme_main_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="HomePopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">

        <item name="android:popupBackground">@color/theme_background_color</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:width">50dp</item>
        <item name="android:maxWidth">50dp</item>

    </style>

</resources>
