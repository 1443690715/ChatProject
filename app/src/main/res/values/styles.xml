<resources>

    <!-- Base application theme. -->
    <style name="DefaultLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorTertiary">@color/text_secondary_color_black</item>
        <item name="android:textColorSecondary">@color/text_secondary_color_black</item>
        <item name="android:textColorPrimary">@color/text_primary_color_black</item>
        <item name="android:windowBackground">@color/theme_background_color</item>
    </style>

    <style name="BaseDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="colorPrimary">@color/theme_main_color</item>-->
        <!--<item name="colorPrimaryDark">@color/theme_main_color</item>-->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="TransparentStatusBarLightTheme" parent="DefaultLightTheme">
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="NoBackgroundLightTheme" parent="DefaultLightTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="NoBackgroundDarkTheme" parent="BaseDarkTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ActionBarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="PopupMenuAnimation_Left_Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_left_top</item>
    </style>

    <style name="PopupMenuAnimation_Right_Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_right_top</item>
    </style>

    <style name="PopupMenuAnimation_Left_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_left_bottom</item>
    </style>

    <style name="PopupMenuAnimation_Right_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_scale_in_from_right_bottom</item>
    </style>

</resources>
